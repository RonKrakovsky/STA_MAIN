{
    "inputs": [
        {
            "type": "promptString",
            "id": "passwd",
            "description": "password",
            "default": ""
        }
    ],
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: gcc build active file",
            "command": "${config:toolchain}gcc.exe",
            "windows": {
                "args": [
                    "-fdiagnostics-color=always",
                    "-g",
                    "${file}",
                    "-o",
                    "${fileDirname}\\${fileBasenameNoExtension}"
                ],
            },
            "linux":{
                "args": [
                    "-fdiagnostics-color=always",
                    "-g",
                    "${file}",
                    "-o",
                    "${fileDirname}/${fileBasenameNoExtension}"
                ],
            },
            
            "options": {
                "cwd": "${fileDirname}",
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
        {
            "label": "Remote Execute",
            "detail": "Executes active file",
            "type": "shell",
            "command": "ssh -t -t ${config:remote.user}@${config:remote.hostname} \"cd code-sync/${workspaceFolderBasename} && gdbserver :${config:remote.port} ./${fileBasenameNoExtension}\"",
            "dependsOrder": "parallel",
            "dependsOn": [
                "Kill GDBserver",
                "Synchronize Code"
            ],
            "presentation": {
                "echo": false,
                "reveal": "always",
                "focus": true,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": [],
        },
        {
            "label": "Kill GDBserver",
            "type": "shell",
            "command": "ssh ${config:remote.user}@${config:remote.hostname} killall gdbserver || true",
            "presentation": {
                "echo": false,
                "clear": true,
            },
            "problemMatcher": []
        },
        {
            "label": "Synchronize Code",
            "type": "shell",
            "command": "rsync -axv --exclude=\".vscode\" --max-size=5MB \"${workspaceFolder}\" ${config:remote.user}@${config:remote.hostname}:code-sync/",
            "presentation": {
                "echo": false,
                "clear": true,
            },
            "problemMatcher": [],
        }
    ],
    "version": "2.0.0"
}